/** 修改默认的navigator点击态 **/
.navigator-hover {
    color:blue;
}
.active{
  border-bottom: 2px solid #0091ff;
  background: #f1f1f1;
  font-weight: bold;
  color:#3b3b3b;
}
.map_top{
position: absolute;
width: 100%;
display: -webkit-flex; /* Safari */
display: flex;
height: 80rpx;
align-items:center;
border-bottom: 1rpx ridge #ccc; 
}
.top{
  width: 25%; 
  height: 80rpx;
  display: -webkit-flex; /* Safari */
  display: flex;  
  align-items:center;
  justify-content:center;   
  border-right: 1rpx solid #ccc;    
}
.icon{
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.map_container{
  position: absolute;
  top: 84rpx;
  bottom: 160rpx;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.bottom{
  height: 160rpx;
  width: 100%;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-flow:row nowrap;
  justify-content: flex-star;
  align-items:center; 
}
.road{
  height:64rpx;
  width:64rpx;  
}
.map_text{
  display: block;
  padding-left:30rpx;
  width: 80%;
}
.map_road{
  width: 20%;
  text-align: center;
}
.detail{
  font-size:24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block;
}
.h1{
  display: block;
  margin: 20rpx 0;
  font-size:30rpx;
}
swiper{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 160rpx;
}
  
